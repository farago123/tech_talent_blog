<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row">
      <div class="col-xs-4">
        <div class="field form-group">
          <%= f.text_field :author, class: "form-control", placeholder: "Author" %>
        </div>
      </div>
    </div> 
    <div class="row">
      <div class="col-xs-4">
        <div class="field form-group">
          <%= f.text_area :comment_entry, class: "form-control", rows: "5", placeholder: "Enter your comments here" %>
        </div>
      </div>  
    </div>
    <div class="field cant-see-me">
      <%= f.number_field :blog_post_id, value: @blog_post.id %>
    </div>  
    <div class="row">
      <div class="col-xs-4">
        <div class="actions form-group">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>  
    </div> 
<% end %>
